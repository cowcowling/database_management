<h1>Listing business_kinds</h1>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Category</th>
      <th>Gross</th>
      <th>Income</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @business_kinds.each do |business_kind| %>
      <tr>
        <td><%= business_kind.customer.name %></td>
        <td><%= business_kind.category %></td>
        <td><%= business_kind.gross %></td>
        <td><%= business_kind.income %></td>
        <td><%= link_to 'Show', business_kind %></td>
        <td><%= link_to 'Edit', edit_business_kind_path(business_kind) %></td>
        <td><%= link_to 'Destroy', business_kind, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

