<div class="wrap">
<div class="header">
	<div class="logo">
		<a href="/home"><img src="<%= asset_path "logo.png" %>" alt=""> </a>
	</div>
	<div class="header-right">
	<div class="contact-info">
		<ul>
			<li>Call to Order</li>
			<li>(+1) 412-456-7890</li>
		</ul>
	</div>
	 </div>
    <div class="clear"></div>
</div>
<div class="hdr-btm">
<div class="hdr-btm-left">
	<div class="search">
	  <form>
              <input type="text" name="keyword" placeholder="type in the keywords..."/>
              <input type="submit" value="Search" name="search" />
	  </form>
	</div>
	<div class="txt-right">
           
	</div>
	<div class="clear"></div>
</div>
</div>
<div class="main">
<div class="sidebar">
<div class="s-main">
	<div class="s_hdr">
		<h2>Categories</h2>
	</div>
	<div class="text1-nav">
		<ul>
			<li><%= link_to "Cell Phone", home_index_path(Kind: "cell") %></li>
			<li><%= link_to "Computer", home_index_path(Kind: "computer") %></li>
			<li><%= link_to "Tablet", home_index_path(Kind: "tablet") %></li>
	    </ul>
	</div>
</div>
</div>
    
<div class="content">
	<% if @products %>
		<table class="table table-striped table-bordered table-hover table-condensed">
			<% @products.each do |product| %>
		      <tr>
		      	<td><img src="<%= asset_path product.image %>" alt="" style="max-width: 100px" ></td>
		        <td><%= product.name %></td>
		        <td><%= product.price %></td>
		        <td><%= product.discount_price %></td>
		        <td><%= product.description %></td>
		      </tr>
		    <% end %>
		</table>
	<% end %>
</div>

<div class="clear"></div>
<div class="footer-bg">
<div class="footer">
	<div class="footer1">
            <p>All Rights Reserved | Design by&nbsp;:&nbsp;Xiujun Ling, Jie Wen, Yu Zhang</p>
	</div>
</div>
</div>