<h1>Listing home_kinds</h1>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Marriage</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Income</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @home_kinds.each do |home_kind| %>
      <tr>
        <td><%= home_kind.customer.name %></td>
        <td><%= home_kind.marriage %></td>
        <td><%= home_kind.gender %></td>
        <td><%= home_kind.age %></td>
        <td><%= home_kind.income %></td>
        <td><%= link_to 'Show', home_kind %></td>
        <td><%= link_to 'Edit', edit_home_kind_path(home_kind) %></td>
        <td><%= link_to 'Destroy', home_kind, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

